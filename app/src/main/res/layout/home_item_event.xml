<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android">
    <data>
        <variable
            name="handlers"
            type="csfyp.cs_fyp_android.home.FrgHome" />
    </data>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_event"
        android:elevation="2dp"
        android:layout_margin="4dp"
        android:padding="8dp"
        android:clickable="true"
        android:onClick="@{handlers.onClickDrawerEvent}">


        <LinearLayout
                         android:layout_width="match_parent"
                         android:layout_height="wrap_content"
                         android:gravity="center_vertical">

                         <TextView
                         android:layout_width="0dp"
                         android:layout_height="wrap_content"
                         android:layout_weight="3"
                         android:padding="8dp"
                         android:text="Event Name"
                         android:textSize="20sp"
                         android:textColor="#202020"/>

                         <ImageView
                         android:layout_width="16dp"
                         android:layout_height="16dp"
                         android:layout_marginRight="2dp"
                         android:src="@drawable/ic_location"
                         android:id="@+id/imageView5" />

                         <TextView
                         android:layout_width="0dp"
                         android:layout_height="16dp"
                         android:layout_weight="1"
                         android:gravity="left"
                         android:text="Hong Kong"
                         android:textColor="#000000"
                         android:textSize="14sp"
                         android:includeFontPadding="false"/>

                         </LinearLayout>

        <View android:layout_width="match_parent"
                                                     android:layout_height="1dp"
                                                     android:background="#36000000"/>

        <LinearLayout
                         android:layout_width="match_parent"
                         android:layout_height="wrap_content"
                         android:orientation="horizontal"
                         android:layout_marginTop="4dp"
                         android:padding="8dp">

                         <ImageView
                         android:layout_width="20dp"
                         android:layout_height="20dp"
                         android:layout_marginRight="4dp"
                         android:src="@drawable/ic_star"
                         android:id="@+id/imageView" />

                         <TextView
                         android:layout_width="0dp"
                         android:layout_height="20dp"
                         android:layout_weight="3"
                         android:gravity="center_vertical"
                         android:text="username"
                         android:textColor="#000000"
                         android:textSize="16sp"
                         android:includeFontPadding="false"/>

                         <LinearLayout
                         android:layout_width="0dp"
                         android:layout_height="20dp"
                         android:layout_weight="1"
                         android:gravity="right|center_vertical"
                         android:orientation="horizontal">

                         <TextView
                         android:layout_width="wrap_content"
                         android:layout_height="match_parent"
                         android:text="5"
                         android:textColor="#000000"
                         android:textSize="16sp"
                         android:includeFontPadding="false"/>

                         <TextView
                         android:layout_width="wrap_content"
                         android:layout_height="match_parent"
                         android:text="/"
                         android:textColor="#000000"
                         android:textSize="16dp"
                         android:includeFontPadding="false"/>

                         <TextView
                         android:layout_width="wrap_content"
                         android:layout_height="match_parent"
                         android:text="8"
                         android:textColor="#000000"
                         android:textSize="16dp"
                         android:includeFontPadding="false"/>

                         </LinearLayout>

                         <ImageView
                         android:layout_width="20dp"
                         android:layout_height="20dp"
                         android:layout_marginLeft="4dp"
                         android:src="@drawable/ic_people_3"
                         android:id="@+id/imageView2" />

                         </LinearLayout>

        <TextView
                     android:layout_width="match_parent"
                     android:layout_height="wrap_content"
                     android:paddingLeft="16dp"
                     android:paddingRight="16dp"
                     android:text="This is a good event. Please join us."
                     android:textSize="16dp"
                     android:textColor="#202020"/>

        <LinearLayout
                         android:layout_width="match_parent"
                         android:layout_height="wrap_content"
                         android:gravity="center_vertical"
                         android:padding="10dp"
                         android:orientation="horizontal">

                         <ImageView
                         android:layout_width="16dp"
                         android:layout_height="16dp"
                         android:layout_marginRight="4dp"
                         android:src="@drawable/ic_clock"
                         android:id="@+id/imageView4" />

                         <TextView
                         android:layout_width="0dp"
                         android:layout_height="16dp"
                         android:gravity="center_vertical"
                         android:layout_weight="1"
                         android:text="24/09 16:00-18:00"
                         android:textSize="14sp"
                         android:textColor="#000000"
                         android:includeFontPadding="false"/>

                         <LinearLayout
                         android:layout_width="0dp"
                         android:layout_height="wrap_content"
                         android:layout_weight="1"
                         android:gravity="right|center_vertical">

                         <TextView
                         android:layout_width="wrap_content"
                         android:layout_height="wrap_content"
                         android:layout_marginRight="3dp"
                         android:text="Deadline"
                         android:textColor="#666666"
                         android:textSize="14dp"
                         android:id="@+id/textView"
                         android:includeFontPadding="false"/>

                         <TextView
                         android:layout_width="wrap_content"
                         android:layout_height="wrap_content"
                         android:gravity="right"
                         android:text="23/09 19:00"
                         android:textSize="14sp"
                         android:textColor="#000000"
                         android:includeFontPadding="false"/>

                         </LinearLayout>

                         </LinearLayout>

    </LinearLayout>

</layout>